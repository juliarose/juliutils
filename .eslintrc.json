{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "jsdoc/require-description-complete-sentence": [
      "error", {
        "tags": [
          "see",
          "copyright"
        ]
      }
    ],
    "valid-jsdoc": [2, {
      "prefer": {
          "return": "returns"
      },
      "preferType": {
        "object": "Object",
        "boolean": "Boolean",
        "string": "String",
        "symbol": "Symbol",
        "number": "Number",
        "bigint": "BigInt",
        "function": "Function",
        "Null": "null",
        "Undefined": "undefined"
      }
    }],
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 2
      }
    ],
    "indent": [
      "error",
      4,
      {
        "SwitchCase": 1
      }
    ],
    "no-empty": [
      "error",
      {
        "allowEmptyCatch": true
      }
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "no-cond-assign": [
      "off"
    ],
    "no-useless-escape": [
      "warn"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-redeclare": [
      2,
      {
        "builtinGlobals": true
      }
    ],
    "no-console": 0,
    "no-undef": [
      "error"
    ]
  },
  "plugins": [
    "jsdoc"
  ],
  "globals": {
  }
}